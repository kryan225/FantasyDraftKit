<div class="card" style="max-width: 600px; margin: 0 auto;">
  <h2 class="card-title">Create New League</h2>

  <%= form_with model: @league, url: leagues_path, method: :post do |f| %>
    <% if @league.errors.any? %>
      <div class="flash flash-alert mb-2">
        <strong><%= pluralize(@league.errors.count, "error") %> prohibited this league from being saved:</strong>
        <ul>
          <% @league.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "League Name" %>
      <%= f.text_field :name, placeholder: "2026 Fantasy Baseball League", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :team_count, "Number of Teams" %>
      <%= f.number_field :team_count, value: 12, min: 2, max: 20, required: true %>
      <small class="text-muted">Between 2 and 20 teams</small>
    </div>

    <div class="form-group">
      <%= f.label :auction_budget, "Auction Budget per Team" %>
      <%= f.number_field :auction_budget, value: 260, min: 1, required: true %>
      <small class="text-muted">Typical: $260</small>
    </div>

    <div class="form-group">
      <%= f.label :keeper_limit, "Keeper Limit (optional)" %>
      <%= f.number_field :keeper_limit, value: 3, min: 0 %>
      <small class="text-muted">Maximum years a player can be kept. Leave blank for no limit.</small>
    </div>

    <div class="flex gap-2">
      <%= f.submit "Create League", class: "btn btn-primary" %>
      <%= link_to "Cancel", leagues_path, class: "btn" %>
    </div>
  <% end %>
</div>
