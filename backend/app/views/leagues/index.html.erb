<div class="card">
  <div class="flex justify-between items-center mb-3">
    <h2 class="card-title">Your Leagues</h2>
    <%= link_to "Create New League", new_league_path, class: "btn btn-primary" %>
  </div>

  <% if @leagues.any? %>
    <div class="grid grid-2">
      <% @leagues.each do |league| %>
        <div class="card">
          <h3 class="mb-2"><%= league.name %></h3>
          <p class="text-muted text-sm mb-2">
            <%= league.team_count %> teams â€¢ $<%= league.auction_budget %> budget
            <% if league.keeper_limit %>
              â€¢ <%= league.keeper_limit %> keeper limit
            <% end %>
          </p>
          <div class="flex gap-2 mt-2">
            <%= link_to "View League", league_path(league), class: "btn btn-primary btn-sm" %>
            <%= link_to "Draft Board", draft_board_path(league_id: league.id), class: "btn btn-secondary btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted text-center">
      No leagues yet. Create your first league to get started!
    </p>
  <% end %>
</div>
