<div class="mb-2">
  <%= link_to "â† Back to Draft Board", draft_board_path(league_id: @league.id), class: "btn btn-sm" %>
</div>

<div class="card mb-3">
  <h2 class="card-title"><%= @league.name %> - Draft History</h2>
  <p class="text-muted">
    <%= @draft_picks.count %> picks made
  </p>
</div>

<div class="card">
  <h3 class="card-title">Draft Picks</h3>
  <% if @draft_picks.any? %>
    <div style="max-height: 600px; overflow-y: auto;">
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Player</th>
            <th>Team</th>
            <th>Price</th>
            <th>Type</th>
          </tr>
        </thead>
        <tbody id="draft-picks">
          <%= render partial: "draft_board/draft_picks_table", locals: { draft_picks: @draft_picks } %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-muted text-center">No picks yet. Draft hasn't started!</p>
  <% end %>
</div>
