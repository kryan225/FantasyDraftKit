<% draft_picks.each do |pick| %>
  <tr id="draft-pick-<%= pick.id %>">
    <td><%= pick.pick_number %></td>
    <td id="draft-pick-player-<%= pick.player.id %>">
      <%= render partial: "players/player_name", locals: { player: pick.player } %>
      <br>
      <small class="text-muted">
        <%= pick.player.positions %>
        <% if pick.drafted_position.present? %>
          â†’ <strong><%= pick.drafted_position %></strong>
        <% end %>
        - <%= pick.player.mlb_team %>
      </small>
    </td>
    <td><%= pick.team.name %></td>
    <td><strong>$<%= pick.price %></strong></td>
    <td>
      <% if pick.is_keeper %>
        <span class="badge badge-info">Keeper</span>
      <% else %>
        <span class="badge badge-success">Draft</span>
      <% end %>
    </td>
  </tr>
<% end %>
