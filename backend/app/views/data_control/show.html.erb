<div class="mb-2">
  <%= link_to "← Back to League", league_path(@league), class: "btn btn-sm" %>
</div>

<div class="page-header">
  <h1>Data Control</h1>
  <p class="subtitle">Manage player data and draft state for <%= @league.name %></p>
</div>

<div class="data-control-container">
  <!-- Player Statistics -->
  <div class="stats-section">
    <h2>Current Data Status</h2>
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-value"><%= @player_count %></div>
        <div class="stat-label">Total Players</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= @drafted_count %></div>
        <div class="stat-label">Drafted Players</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= @available_count %></div>
        <div class="stat-label">Available Players</div>
      </div>
    </div>
  </div>

  <!-- Import Players Section -->
  <div class="control-section">
    <h2>Import Player Data</h2>
    <p class="section-description">
      Upload a CSV file containing player projections. Existing players will be skipped.
    </p>

    <%= form_with url: league_import_players_path(@league), method: :post, multipart: true, local: true, class: "import-form" do |form| %>
      <div class="form-group">
        <%= form.label :file, "Select CSV File", class: "form-label" %>
        <%= form.file_field :file, accept: ".csv", required: true, class: "file-input" %>
        <small class="form-hint">
          Expected format: Player name with positions | Team, followed by stat columns
        </small>
      </div>

      <div class="form-actions">
        <%= form.submit "Import Players", class: "btn btn-primary", data: { confirm: "Are you sure you want to import players from this CSV file?" } %>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone Section -->
  <div class="control-section danger-zone">
    <h2>Danger Zone</h2>
    <p class="section-description">
      These actions cannot be undone. Use with caution.
    </p>

    <!-- Undraft All Players -->
    <div class="danger-action">
      <div class="danger-action-info">
        <h3>Undraft All Players</h3>
        <p>Remove all draft picks and mark all players as available. Team budgets will be reset.</p>
      </div>
      <%= button_to "Undraft All Players",
          league_undraft_all_players_path(@league),
          method: :post,
          class: "btn btn-warning",
          data: {
            turbo_confirm: "Are you sure you want to undraft ALL players? This will delete #{@drafted_count} draft picks and cannot be undone."
          } %>
    </div>

    <!-- Delete All Players -->
    <div class="danger-action">
      <div class="danger-action-info">
        <h3>Delete All Players</h3>
        <p>Permanently delete all player data from the database. This will also remove all draft picks.</p>
      </div>
      <%= button_to "Delete All Players",
          league_delete_all_players_path(@league),
          method: :delete,
          class: "btn btn-danger",
          data: {
            turbo_confirm: "⚠️ WARNING ⚠️\n\nThis will PERMANENTLY DELETE all #{@player_count} players and their draft picks.\n\nThis action CANNOT be undone!\n\nType 'DELETE' in the confirmation if you're absolutely sure."
          } %>
    </div>
  </div>
</div>

